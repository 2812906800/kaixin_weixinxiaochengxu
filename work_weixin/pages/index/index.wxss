page{
  height:100%;
}
.gd {
  width: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 1;
  background-color: #fff;
}
.search {
  font-size: 16px;
  width: 100%;
  display: flex;
  position: relative;
  justify-content:center; 
}
.search .active{
  font-weight: 800;
  border-bottom: 2px solid #333;
 }
.search text {
  padding: 5px 20px;
}
.search image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 60rpx;
  top: 15rpx;
}
.hot {
  margin-top: 66rpx;
  font-size: 16px;
}
.hot .bigbox {
  width: 100%;
  padding-top: 30rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction:column;
  align-items: center;
  position: relative;
  margin-bottom: 10px;
}
.hot .bigbox image {
  width: 90%;
  height: 350rpx;
  border-radius: 1%;
}
.hot .bigbox view {
  padding-top: 10rpx;
  width: 90%;
}
.hot .bigbox .time {
  position: absolute;
  top: 15px;
  left: 19px;
  background-color: #3D77EA;
  color: #fff;
  width: 66px;
  height: 50px;
  border-radius: 3%;
}
 .hot .bigbox .keyd{
   font-size: 30px;
   font-weight: 700;
   position: absolute;
   bottom: 50px;
   left: 20px;
 }
.hot .user image{
  width: 30rpx;
  height: 22rpx;
  margin-right: 10px;
}
.hot .user .kongge {
  margin-left: 30px;
}
.hot .cont {
  width: 90%;
  display: flex;
  padding-top: 20px;
  justify-content: center;
  margin-bottom: 10px;
  border-top: 1px solid #f2f2f2;
}
.hot .cont .left {
  width: 60%;
  height: auto;
}
.hot .cont .left .name {
  font-size: 20px;
  font-weight: 800;
  margin-bottom: 10px;
}
.hot .cont .left .user {
  margin-top: 10px;
}
.hot .cont .right{
  width: 30%;
  height: auto;
  margin-left: 5px;
}
.hot .cont .right image {
  width: 130px;
  height: 110px;
  border-radius: 2%;
}












button {
  background-color: #333;
  color: #fff;
  font-size: 22px;
  position: fixed;
  left: 280rpx;
  bottom: 30rpx;
} 
.allbox {
  width: 100%;
  height: 100%;
  position: fixed;
  top:0px;
  left: 0px;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
}
.fenxiang {
  width: 100%;
  height: 330rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx; 
  background-color: #fff;
  z-index: 999;


}
.fenxiang .tl {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}
.fenxiang .tl view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.fenxiang .tl .left {
  width: 50%;
}
.fenxiang .tl .right {
  width: 50%;
  margin: 0 auto;
  border-left: 1px solid #ccc;
}
.fenxiang image {
  width: 30px;
  height: 30px;
  
}